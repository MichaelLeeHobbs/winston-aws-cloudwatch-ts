 * @param value - Raw string to validate and brand
 * @returns Result containing the branded value or a validation error
 */
export const create${BRANDED_TYPE}: (
  value: string,
) => Result<${BRANDED_TYPE}> = makeStringFactory<'${BRANDED_TYPE}'>(
  '${BRANDED_TYPE}',
  (value) => value.length > 0 && value.length <= 255,
);

